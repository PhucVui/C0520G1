@model Student
@{
    ViewBag.Title = "Student detail";
}

<div class="text-center">
    <div class="col-6">
        <div class="card">
            <div class="card-header">
                <h3>@Model.Fullname</h3>
            </div>
            <img class="card-img-top" src="~/images/@Model.Aavatar" width="200" height="350">
            <div class="card-body">
                <h5>Id: @Model.ID</h5>
                <h5>Dob: @Model.DoB.ToString("dd/MM/yyyy") </h5>
                <h5>Email: @Model.Email </h5>
                <h5>Class: @Model.Classes </h5>
            </div>
            <div class="card-footer text-center">
                <a class="btn btn-primary" asp-controller="Home" asp-action="index">Back</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.ID" class="btn btn-warning">Edit</a>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.ID" class="btn btn-danger">Remove</a>
            </div>
        </div>
    </div>
</div>