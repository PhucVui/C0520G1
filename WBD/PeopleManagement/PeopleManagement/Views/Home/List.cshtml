@model List<PeopleView>
@{
    ViewData["Title"] = "People";
}
<div>
    <h1 class="display-4">DANH SÁCH ĐĂNG KÝ TÀI KHOẢN</h1>
    <table id="tbPeople" class="table table-hover table-striped table-bordered table-responsive table-light">
        <thead>
            <tr class="thead-dark">
                <th>STT</th>
                <th>Họ và tên</th>
                <th>Email</th>
                <th>Số điện thoại</th>
                <th>Thành phố</th>
                <th>Quận/Huyện</th>
                <th>Phường/Xã</th>
                <th>Địa chỉ</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var people in Model)
            {
                <tr>
                    <td>@people.Id</td>
                    <td>@people.Fullname</td>
                    <td>@people.Email</td>
                    <td>@people.PhoneNumber</td>
                    <td>@people.ProvinceName</td>
                    <td>@people.DistrictName</td>
                    <td>@people.WardName</td>
                    <td>@people.Address</td>
                    <td>
                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

@section Scripts{
    <script src="~/js/list.js" asp-append-version="true"></script>
}